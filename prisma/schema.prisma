generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id    String   @id @default(uuid())
  name  String
  description String
  notes String[]
  price String
  images String[]
  tags  String[]
  imageUrl String[]
  category Category @relation(fields: [categoryId], references: [id])
  categoryId String
}

model Category {
  id    String   @id @default(uuid())
  category_name  String @unique
  image String
  imageUrl String?
  products Product[]
}

model Discount {
  id    String   @id @default(uuid())
  discount_name String
  discount_total String
}

