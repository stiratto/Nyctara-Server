generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearchPostgres"]
}

datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")
}

model Product {
  id              String          @id @default(uuid()) @db.Uuid
  product_name            String          @db.VarChar(40)
  product_description     String          @db.Text
  product_notes           String[]
  product_price           Decimal         @default(0.00)
  product_images          String[]
  product_tags            String[]
  isAvailable             Boolean?         @default(true)
  product_category        Category        @relation(fields: [categoryId], references: [id])
  categoryId      String          @db.Uuid
  product_quality PRODUCT_QUALITY @default(REACONDICIONADO)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
}

model Category {
  id            String    @id @default(uuid()) @db.Uuid
  category_name String    @unique
  products      Product[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Discount {
  id             String   @id @default(uuid()) @db.Uuid
  discount_name  String   @db.VarChar(255)
  discount_total Int 
  valid_until    DateTime 
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Payments {
  payment_id String @unique
}


enum PRODUCT_QUALITY {
  ORIGINAL
  REACONDICIONADO
}
